<p id="notice"><%= notice %></p>

<h1>Coupons</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Coupon count</th>
      <th>Percentage</th>
      <th>Movie</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coupons.each do |coupon| %>
      <tr>
        <td><%= coupon.code %></td>
        <td><%= coupon.coupon_count %></td>
        <td><%= coupon.percentage %></td>
        <td><%= coupon.movie.name %></td>
        <%if current_user.type == "Admin"%>
        <td><%= link_to 'Show', coupon %></td>
        <td><%= link_to 'Destroy', coupon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>