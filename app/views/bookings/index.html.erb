<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Coupon code</th>
      <th>User</th>
      <th>Movie</th>
      <th>Total fee</th>
      <th>Seat count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.coupon_code %></td>
        <td><%= booking.user %></td>
        <td><%= booking.movie %></td>
        <td><%= booking.total_fee %></td>
        <td><%= booking.seat_count %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

