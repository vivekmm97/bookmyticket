<p id="notice"><%= notice %></p>

<h1>Screens</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Fee</th>
      <th>Theatre</th>
      <th>Seat count</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @screens.each do |screen| %>
      <tr>
        <td><%= screen.date %></td>
        <td><%= screen.fee %></td>
        <td><%= screen.theatre.name %></td>
        <td><%= Seat.find(screen.seat_id).seat_count %></td>
        <td><%= Timing.find(screen.timing_id).time %></td>
        <%if current_user.type == "Admin"%>
        <td><%= link_to 'Show', screen %></td>
        <td><%= link_to 'Destroy', screen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Add Movie', new_screen_movies_path(screen)%></td>
        <%else%>
        <td><%= link_to 'Select Screen', movies_path(screen)%>
        <%end%>
      </tr>

    <% end %>
  </tbody>
</table>
<br>

